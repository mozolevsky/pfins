{
    "name": "pfins_server",
    "version": "1.0.0",
    "description": "personal finances tracker - server side",
    "main": "index.js",
    "author": "mozolevsky <mrmozolevsky@gmail.com>",
    "license": "MIT",
    "private": true,
    "type": "module",
    "dependencies": {
        "@apollo/server": "^5.0.0",
        "graphql": "^16.11.0",
        "sequelize": "^6.37.7",
        "sequelize-cli": "^6.6.3",
        "sqlite3": "^5.1.7"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^6.0.1",
        "@graphql-codegen/typescript": "^5.0.2",
        "@graphql-codegen/typescript-resolvers": "^5.1.0",
        "@types/node": "^24.6.2",
        "nodemon": "^3.0.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "compile": "tsc",
        "dev": "tsx watch ./src/index.ts",
        "start": "yarn compile && nodemon ./dist/index.js",
        "start:prod": "yarn compile && node ./dist/index.js",
        "db:init": "tsx ./src/sequelize/initDB.ts",
        "db:seed": "tsx ./src/sequelize/seedDB.ts",
        "db:setup": "yarn db:init && yarn db:seed",
        "generate": "graphql-codegen"
    }
}
